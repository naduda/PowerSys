<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="controllers.HotKeysController" xmlns:fx="http://javafx.com/fxml" styleClass="root">
	<center>
		<TabPane side="BOTTOM">
			<tabs>
				<Tab closable="false" text="MenuBar">
					<content>
						<GridPane fx:id="gridMenuBar" alignment="center" hgap="10" vgap="10">
							<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

						</GridPane>
					</content>
				</Tab>
				<Tab closable="false" text="ToolBar">
					<content>
						<GridPane fx:id="gridToolBar" alignment="center" hgap="10" vgap="10">
							<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

						</GridPane>
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</center>

	<bottom>
		<HBox spacing="10" alignment="center">
			<padding>
				<Insets bottom="5.0" left="2.0" right="2.0" top="5.0"/>
			</padding>

			<Button fx:id="btnOK" onAction="#btnOK"/>
			<Button fx:id="btnCancel" onAction="#btnCancel"/>
		</HBox>
	</bottom>
</BorderPane>