<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="controllers.config.AddCustPropController" xmlns:fx="http://javafx.com/fxml" styleClass="root">
	<center>
		<GridPane fx:id="gridPane" alignment="center" hgap="10" vgap="5">
			<padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

			<Label fx:id="lblName" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
 			<TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

 			<Label fx:id="lblValue" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 			<TextField fx:id="txtValue" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
		</GridPane>
	</center>

	<bottom>
		<HBox spacing="10" alignment="center">
			<padding>
				<Insets bottom="5.0" left="2.0" right="2.0" top="5.0"/>
			</padding>

			<Button fx:id="btnOK" onAction="#btnOK"/>
			<Button fx:id="btnCancel" onAction="#btnCancel"/>
		</HBox>
	</bottom>
</BorderPane>