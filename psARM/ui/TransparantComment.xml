<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>

<BorderPane fx:id="bp" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.TrCommentController" styleClass="root">
	<padding>
		<Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
	</padding>

	<center>
		<TextArea fx:id="txtArea" text="" prefWidth="${lvTransparants.width}" prefHeight="75"/>
	</center>

	<bottom>
		<HBox spacing="10" alignment="center">
			<padding>
				<Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
			</padding>

			<Button fx:id="btnOK" text="Встановити" onAction="#btnOK"/>
			<Button fx:id="btnCancel" text="Відхилити" onAction="#btnCancel"/>
		</HBox>
	</bottom>
</BorderPane>