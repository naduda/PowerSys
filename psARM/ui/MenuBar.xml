<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<MenuBar xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.MenuBarController">
	<menus>
		<Menu fx:id="menuFile" text="Файл">
			<items>
				<MenuItem fx:id="miOpenScheme" text="Відкрити схему" onAction="#openScheme">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/OpenFolder.png" />
							</image>
						</ImageView>
					</graphic>
				</MenuItem>
				<MenuItem fx:id="miOpenProject" text="Відкрити проект">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/OpenProject.png" />
							</image>
						</ImageView>
					</graphic>
				</MenuItem>
				<Menu fx:id="menuTrend" text="Тренд">
					<items>
						<MenuItem fx:id="miOpenTrend" text="Відкрити тренд">
							<graphic>
								<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Icon/OpenProject.png" />
									</image>
								</ImageView>
							</graphic>
						</MenuItem>
						<MenuItem fx:id="miCreateTrend" text="Створити тренд">
							<graphic>
								<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Icon/Create.png" />
									</image>
								</ImageView>
							</graphic>
						</MenuItem>
					</items>
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/Trend.png" />
							</image>
						</ImageView>
					</graphic>
				</Menu>
				<SeparatorMenuItem />
				<MenuItem fx:id="miLogin" text="Блокування">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/Block.png" />
							</image>
						</ImageView>
					</graphic>
				</MenuItem>
				<MenuItem fx:id="miExit" text="Вихід" onAction="#exit">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/Exit.png" />
							</image>
						</ImageView>
					</graphic>
				</MenuItem>
			</items>
		</Menu>
		<Menu fx:id="menuJournals" text="Журнали">
			<items>
				<MenuItem fx:id="miOpenJAlarms" onAction="#openJalarms" />
			</items>
		</Menu>
		<Menu fx:id="menuReports" text="Звіти">
			<items>

			</items>
		</Menu>
		<Menu fx:id="menuTools" text="Інструменти">
			<items>

			</items>
		</Menu>
		<Menu fx:id="menuSettings" text="Налаштування">
			<items>
				<Menu fx:id="menuLanguage" text="Мова" >
					<items>
						<MenuItem id="en" text="English" onAction="#changeLocale" />
						<MenuItem id="ru" text="Русский" onAction="#changeLocale" />
						<MenuItem id="uk" text="Українська" onAction="#changeLocale" />
					</items>
				</Menu>
			</items>
		</Menu>
		<Menu fx:id="menuExit" text="Вихід">
			<items>

			</items>
		</Menu>
		<Menu fx:id="menuAbout" text="Про програму ...">
			<items>

			</items>
		</Menu>
	</menus>
</MenuBar>
