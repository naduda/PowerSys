<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.input.KeyCodeCombination?>

<MenuBar xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.MenuBarController">
	<menus>
		<Menu fx:id="menuFile">
			<items>
				<MenuItem fx:id="miOpenScheme" text="Відкрити схему" onAction="#openScheme">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/OpenFolder.png" />
							</image>
						</ImageView>
					</graphic>
				</MenuItem>
				<MenuItem fx:id="miOpenProject">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/OpenProject.png" />
							</image>
						</ImageView>
					</graphic>
				</MenuItem>
				<Menu fx:id="menuTrend">
					<items>
						<MenuItem fx:id="miOpenTrend">
							<graphic>
								<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Icon/OpenProject.png" />
									</image>
								</ImageView>
							</graphic>
						</MenuItem>
						<MenuItem fx:id="miCreateTrend">
							<graphic>
								<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../Icon/Create.png" />
									</image>
								</ImageView>
							</graphic>
						</MenuItem>
					</items>
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/Trend.png" />
							</image>
						</ImageView>
					</graphic>
				</Menu>
				<SeparatorMenuItem />
				<MenuItem fx:id="miLogin">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/Block.png" />
							</image>
						</ImageView>
					</graphic>
				</MenuItem>
				<MenuItem fx:id="miExit" onAction="#exit">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../Icon/Exit.png" />
							</image>
						</ImageView>
					</graphic>
				</MenuItem>
			</items>
		</Menu>
		<Menu fx:id="menuJournals">
			<items>
				<MenuItem fx:id="miJAlarms" mnemonicParsing="true" onAction="#openJalarms" >
					<accelerator>
						<KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
					</accelerator>
				</MenuItem>
				<MenuItem fx:id="miJControl" onAction="#openJControl" />
				<MenuItem fx:id="miJNormalMode" onAction="#openJNormalMode" />
				<MenuItem fx:id="miJswitchEq" onAction="#openJswitchEq" />
				<MenuItem fx:id="miJuserEvents" onAction="#openJuserEvent" />
			</items>
		</Menu>
		<Menu fx:id="menuReports">
			<items>

			</items>
		</Menu>
		<Menu fx:id="menuTools">
			<items>
				<MenuItem fx:id="miSetBaseVal" onAction="#setBaseVal" />
			</items>
		</Menu>
		<Menu fx:id="menuSettings">
			<items>
				<Menu fx:id="menuLanguage">
					<items>
						<MenuItem id="en" onAction="#changeLocale" />
						<MenuItem id="ru" onAction="#changeLocale" />
						<MenuItem id="uk" onAction="#changeLocale" />
					</items>
				</Menu>
			</items>
		</Menu>
		<Menu fx:id="menuExit"/>
		<Menu fx:id="menuAbout"/>
	</menus>
</MenuBar>
