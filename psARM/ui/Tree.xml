<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<ScrollPane fx:id="spTree" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.tree.TreeController" hbarPolicy="NEVER">
	<padding>
		<Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
	</padding>
	<Accordion fx:id="accordTree">
		<panes>
			<TitledPane fx:id="tpSchemes" prefWidth="${spTree.width-spTree.padding.left-spTree.padding.right-5}" >
				<graphic>
					<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
						<Image url="@../Icon/schemes.png"/>
					</ImageView>
				</graphic>
				<content>
					<TreeView fx:id="tvSchemes" showRoot="false">
						<root>
							<TreeItem fx:id="trSchemes" value="trSchemes"/>
						</root>
					</TreeView>
				</content>
			</TitledPane>
			<TitledPane fx:id="tpTrends" text="Тренди" >
				<graphic>
					<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
						<Image url="@../Icon/trend2.png"/>
					</ImageView>
				</graphic>
				<content>
					<TreeView fx:id="tvTrends" showRoot="false">
						<root>
							<TreeItem fx:id="trTrends" value="trTrends"/>
						</root>
					</TreeView>
				</content>
			</TitledPane>
			<TitledPane fx:id="tpReports" text="Звіти" >
				<graphic>
					<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
						<Image url="@../Icon/report.png"/>
					</ImageView>
				</graphic>
				<content>
					<TreeView fx:id="tvReports" showRoot="false">
						<root>
							<TreeItem fx:id="trReports" value="trReports"/>
						</root>
					</TreeView>
				</content>
			</TitledPane>
		</panes>
	</Accordion>
</ScrollPane>